<h1>관리자 삭제 페이지</h1>

<h2>{{ title }}</h2>
<table>
  <tr>
    <td>Airport_code</td>
    <td>Name</td>
    <td>City</td>
  </tr>
  {{#each airport}}
    <form method="post">
      <tr>
        <td>{{Airport_code}}</td>
        <td>{{Name}}</td>
        <td>{{City}}</td>
        <td style="border: none; margin-left: 10px;">
          <button 
            style="margin-left: 10px;"
            type="submit" 
            name="delBtn"
            value={{Airport_code}} 
            formaction="/delete">
          삭제
          </button>
        </td>
      </tr>    
    </form>
  {{/each}}
</table>
